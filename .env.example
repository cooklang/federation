# Database Configuration
DATABASE_URL=sqlite:./data/federation.db
# For PostgreSQL:
# DATABASE_URL=postgres://user:password@localhost/federation

# Server Configuration
HOST=0.0.0.0
PORT=3000
EXTERNAL_URL=http://localhost:3000
API_RATE_LIMIT=100  # requests per second for API endpoints

# Crawler Configuration
CRAWLER_INTERVAL=3600  # seconds between feed updates
MAX_FEED_SIZE=5242880  # 5MB max feed size
MAX_RECIPE_SIZE=1048576  # 1MB max recipe size
RATE_LIMIT=1  # requests per second per domain

# Search Index
INDEX_PATH=./data/index

# Pagination Configuration
API_MAX_LIMIT=100          # Maximum results per page for API
WEB_DEFAULT_LIMIT=50       # Default results per page for web UI
FEED_PAGE_SIZE=20          # Results per page on feeds page
MAX_SEARCH_RESULTS=1000    # Maximum total search results
MAX_REQUEST_BODY_SIZE=10485760  # 10MB max request body size
MAX_PAGES=10000            # Maximum pages to prevent pagination overflow

# Logging
RUST_LOG=info,federation=debug

# GitHub Integration (Optional)
# Get a token from: https://github.com/settings/tokens
# Scopes needed: public_repo (or none for public repos only)
# Leave commented out to disable GitHub integration
# GITHUB_TOKEN=ghp_your_github_personal_access_token
GITHUB_UPDATE_INTERVAL=21600   # 6 hours (in seconds)
GITHUB_RATE_LIMIT_BUFFER=500   # Reserve this many requests
GITHUB_MAX_FILE_SIZE=1048576   # 1MB max .cook file size
RECIPE_CONCURRENCY=10          # Number of recipes to process concurrently (default: 10)
